<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
  </head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}

          <div class="cchekout_custom_icons">

            <div class="icon_box_item">
              <div class="icon_box_image">
              	<img src="https://cdn.shopify.com/s/files/1/0604/6525/0464/files/delivery.png?v=1661959802">
              </div>
              <div class="icon_box_text">
                <h4>Free Delivery!</h4>
                <p>Our sheets are made to last - so we’ll make it right should anything wrong.</p>
              </div>
            </div>

             <div class="icon_box_item">
              <div class="icon_box_image">
              	<img src="https://cdn.shopify.com/s/files/1/0604/6525/0464/files/infinity.png?v=1661959802">
              </div>
              <div class="icon_box_text">
                <h4>Warranty</h4>
                <p>Our sheets are made to last - so we’ll make it right should anything wrong.</p>
              </div>
            </div>
            
          </div>
            
            
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>
    {{ tracking_code }}
        {% include 'free-gift-checkout' %}


    <style>
      .icon_box_text h4 {
          FONT-WEIGHT: 700;
          font-size: 16px;
          padding-bottom: 10px;
      }

      .icon_box_text p {
          font-size: 15px;
      }
      .icon_box_item {
          display: flex;
          gap: 15px;
      }   

      .icon_box_image {
    width: 127px;
}
      .icon_box_image img {
    height: 70px;
    width: 70px;
}
      .cchekout_custom_icons {
    margin-top: 40px;
}
      .icon_box_item {

    margin-bottom: 20px;
}
    </style>
    
  </body>
</html>
